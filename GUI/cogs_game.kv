<StartPage>
    rows: 4

    background_color: (231/255.0, 231/255.0, 231/255.0, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"

        padding: 50
        spacing: 20

        Label:
            id: create_character_lbl
            text:  "Create your character: "
            font_size: 32

    GridLayout:
        cols: 2

        BoxLayout:
            orientation: "vertical"
            padding: 50
            spacing: 30

            Label:
                id: set_name_lbl
                text: "Name:"
                text_size: self.size

            TextInput:
                id: set_name_input
                size: 250, 50
                size_hint: None, None

            Label:
                id: set_age_lbl
                text: "Age:"
                text_size: self.size

            TextInput:
                id: set_name_input
                size: 250, 50
                size_hint: None, None

        BoxLayout:
            orientation: "vertical"

            padding: 50
            spacing: 20

            Button:
                id: create_person_btn
                size: 120, 50
                size_hint: None, None
                text: "Create"
                font_size: 32

    BoxLayout:
        orientation: "vertical"

        padding: 50
        spacing: 20

        BoxLayout:
            orientation: "vertical"

            Label:
                id: conversation_lbl
                text: "Cool, *NAME*! Choose someone in your family to talk to:"
                font_size: 20

            Spinner:
                id: convesation_options
                text: "Choose..."
                values: ["Parent", "Child", "Partner", "Sibling"]

                on_text: root.spinner_clicked(conversation_options.text)

    BoxLayout:
        orientation: "vertical"

        padding: 50
        spacing: 20

        BoxLayout:
            orientation: "vertical"

            Button:
                id: start_convo
                text: "Start conversation"
                font_size: 32
                #on_release: set_relation(selected_option)

            TextInput:
                id: chatbox_input

            Label:
                id: chatbox_output_lbl
                background_color: (197/255.0, 216/255.0, 209/255.0, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                text: "Hey mama"


