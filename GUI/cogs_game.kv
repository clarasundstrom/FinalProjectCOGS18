<StartPage>

    welcome_lbl: welcome_lbl
    create_character_lbl: create_character_lbl
    set_name_lbl: set_name_lbl
    set_name_input: set_name_input
    set_age_lbl: set_age_lbl
    set_age_input: set_age_input
    create_person_btn: create_person_btn
    conversation_lbl: conversation_lbl
    conversation_options: conversation_options
    chatbox_history_lbl: chatbox_history_lbl
    scroll_to_lbl: scroll_to_lbl
    message_input: message_input
    send_btn: send_btn

    rows: 4

    background_color: (249/255.0, 199/255.0, 132/255.0, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"

        padding: 50
        spacing: 50

        Label:
            id: welcome_lbl
            text:  "Welcome! "
            font_size: 50

        Label:
            id: create_character_lbl
            text:  "Create your character: "
            font_size: 35

    GridLayout:
        rows: 2
        cols: 3

        BoxLayout:
            orientation: "horizontal"
            padding: 50
            spacing: 30

            Label:
                id: set_name_lbl
                text: "Name:"
                font_size: 40

            TextInput:
                id: set_name_input
                size: 250, 50
                size_hint: None, None

            Label:
                id: set_age_lbl
                text: "Age:"
                font_size: 40

            TextInput:
                id: set_age_input
                size: 250, 50
                size_hint: None, None

      #  BoxLayout:
       #     orientation: "horizontal"

       #     padding: 50
       #     spacing: 20

            Button:
                id: create_person_btn
                size: 120, 50
                size_hint: None, None
                text: "Create"
                font_size: 32
                on_release: root.create_person(set_name_input.text, set_age_input.text), root.check_age(set_age_input.text)

    BoxLayout:
        orientation: "vertical"

        padding: 50
        spacing: 20

        BoxLayout:
            orientation: "vertical"

            Label:
                id: conversation_lbl
                text: "Cool! Choose someone in your family to talk to:"
                font_size: 20

            Spinner:
                id: conversation_options
                text: "Choose..."
                values: []

                #on_text: root.spinner_clicked(conversation_options.text)
                on_release:

    BoxLayout:
        orientation: "vertical"

        padding: 50
        spacing: 20

        BoxLayout:
            orientation: "vertical"

            GridLayout:
                id: chatbox_layout
                cols: 1

                ScrollView:
                    Label:
                        id: chatbox_history_lbl
                        markup: True
                        background_color: (197/255.0, 216/255.0, 209/255.0, 1)
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            Rectangle:
                                size: 1178, 120
                                pos: self.pos
                        text: "Hiya"

                ScrollView:
                    Label:
                        id: scroll_to_lbl

            GridLayout:
                cols: 2

                TextInput:
                    id: message_input
                    size: 900, 45
                    size_hint: None, None

                Button:
                    id: send_btn
                    size: 278, 45
                    size_hint: None, None
                    text: "Send"
                    font_size: 32
                    on_release: root.matching_phrases(root.ids.conversation_options.text), root.talk(), root.update_chat_history_lbl()


